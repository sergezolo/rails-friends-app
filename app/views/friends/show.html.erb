<div class="h-100 p-5 bg-light border rounded-3 position-relative">
  <h2 class="position-absolute top-10 start-50 translate-middle"><%= @friend.first_name %> <%= @friend.last_name %></h2><br/>
  <p><strong>Email: </strong><%= @friend.email %></p>
  <p><strong>Phone: </strong><%= @friend.phone %></p>
  <p><strong>Twitter: </strong><%= @friend.twitter %></p><br/>
  <span class="position-absolute top-90 start-50 translate-middle ">
    <%= link_to 'Edit', edit_friend_path(@friend), class: 'btn btn-secondary' %>
    <%= link_to 'Back', friends_path, class: 'btn btn-dark' %>
  </span>
</div>
